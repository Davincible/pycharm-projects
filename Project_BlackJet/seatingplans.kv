                id: top_seats
                size_hint: root.seat_layout_size_hint
                size: root.seat_layout_size
#                size_hint_y: None
#                height: root.seat_layout_height
                pos: root.seat_layout_two_pos #self.parent.x, self.parent.y + 0.578 * self.parent.height

                canvas:
                    Color:
                        rgba: 1, 0, 0, .3
                    Rectangle:
                        size: self.size
                        pos: self.pos

            FloatLayout:
                id: bottom_seats
                size_hint: root.seat_layout_size_hint
                size: root.seat_layout_size
