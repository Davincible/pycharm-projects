<SeatingPlansMainLayout>:
    KL739:
        id: plane
        pos_hint: {'center_x': .5, 'center_y': .5}


<PlaneLayoutBasis>:
    size_hint_y: None
    height: 344 #parent_grid.height
    parent_grid: parent_grid

    GridLayout:
        id: parent_grid
        cols: 1
        size_hint: None, None
        size: root.plane_layout.width, root.plane_layout.height
        padding: root.padding_ #[0.208*self.width, 0.189*self.height, 0.184*self.width, 0.189*self.height]

        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
                texture: root.plane_layout
                tex_coords: root.tex_coords_ # [1, 1, 1, 0, 0, 0, 0, 1]

        FloatLayout:
            size_hint: 1, 1
            id: center_layout

#            canvas.after:
