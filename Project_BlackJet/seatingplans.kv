#:import BusinessClass_Seat seats.BusinessClass_Seat
#:import ScrollEffect kivy.effects.scroll.ScrollEffect

<SeatingPlansMainLayout>:
    KL739:
        id: plane
        pos_hint: {'center_x': .5, 'center_y': .5}


<PlaneLayoutBasis>:
    size_hint_y: None
    height: 344 #parent_grid.height
    parent_grid: parent_grid
    effect_cls: ScrollEffect
    bar_width: dp(10)

    GridLayout:
        id: parent_grid
        cols: 1
        size_hint: None, None
        size: root.plane_layout.width, root.plane_layout.height
        padding: root.padding_

        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
                texture: root.plane_layout
                tex_coords: root.tex_coords_ # [1, 1, 1, 0, 0, 0, 0, 1]

        FloatLayout:
            size_hint: 1, 1
            id: center_layout

            FloatLayout:
                id: top_seats
                size_hint: root.seat_layout_size_hint
                size: root.seat_layout_size
                pos: root.seat_layout_two_pos #self.parent.x, self.parent.y + 0.578 * self.parent.height

            FloatLayout:
                id: bottom_seats
                size_hint: root.seat_layout_size_hint
                size: root.seat_layout_size
                pos: root.seat_layout_one_pos
