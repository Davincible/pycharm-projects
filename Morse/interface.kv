#:kivy 1.9.1
gui_layout:

<gui_layout>:
    id: interface
    orientation: 'vertical'
    padding: [15,10,15,'50sp']
    display: output_text
    input_box: input_box

    Label:
        text: 'Morse code encoder'
        font_size: '30sp'

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: root.Height_One
        padding: ['25sp','25sp','25sp',0]

        TextInput:
            id: input_box
            size_hint_x: None
            width: '600sp'
            size_hint_y: None
            height: root.Height_One
            text: 'What is your message?'

        Button:
            size_hint_y: None
            height: root.Height_One
            text: 'Enter'
            on_press: interface.when_pressed(input_box.text)
            #on_press: interface.T_sound.start()

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: root.Height_One
        padding: ['25sp','25sp','25sp',0]

        Button:
            size_hint_y: None
            height: root.Height_One
            text: 'Replay Morse'
            on_press: interface.sounds()


    Label:
        id: output_text
        size_hint_y: None
        height: '300dp'
        #padding: [30,30,30,'75sp']