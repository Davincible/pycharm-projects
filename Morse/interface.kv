#:kivy 1.9.1
gui_layout:

<gui_layout>:
    id: interface
    orientation: 'vertical'
    padding: [15,10,15,'50sp']
    display: output_text
    input_box: input_box
    sound_switch: sound_switch

    Label:
        text: 'Morse code encoder'
        font_size: '30sp'

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: root.Height_One
        padding: ['25sp','25sp','25sp',0]

        TextInput:
            id: input_box
            size_hint_x: None
            width: '600sp'
            size_hint_y: None
            height: root.Height_One
            hint_text: 'What is your message?'
            multiline: False
            on_text_validate: interface.when_pressed(input_box.text)

        Button:
            size_hint_y: None
            height: root.Height_One
            text: 'Enter'
            on_press: interface.when_pressed(input_box.text)


    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: root.Height_One
        padding: ['25sp','25sp','475sp',0]

        Button:
            size_hint_y: None
            height: root.Height_One
            text: 'Replay Morse'
            on_press: interface.sounds()
            size_hint_x:0.3

        Label:
            text: 'Sound: '
            size_hint: (0.3,2.5)
        Switch:
            id: sound_switch
            #orientation: 'vertical'
            #padding: [0,0,0,'15dp']
            size_hint: (0.1,2.5)
            active_norm_pos: 1



    Label:
        id: output_text
        size_hint_y: None
        height: '300dp'
        #padding: [30,30,30,'75sp']