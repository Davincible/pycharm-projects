#:kivy 1.9.1
<WindowLayout>:
    orientation: 'horizontal'

    ButtonBoxOne:

    Slider:
        orientation: 'vertical'
        min: root.slidermin
        max: root.slidermax
        value: root.sliderstart
        on_value: root.set_value_one(*args)

    Slider:
        orientation: 'vertical'
        min: root.slidermin
        max: root.slidermax
        value: root.sliderstart
        on_value: root.set_value_two(*args)

    Slider:
        orientation: 'vertical'
        min: root.slidermin
        max: root.slidermax
        value: root.sliderstart
        on_value: root.set_value_three(*args)

    ButtonBoxTwo:

    ButtonBoxThree:


<ButtonBoxOne@BoxLayout>:
    orientation: 'vertical'

    Button:
        text: 'Exit'
        font_size: '30sp'
        background_color: (0.69, 0.77, 0.87, 1)
        on_press: app.get_running_app().stop()

    Button:
        text: 'Red \n ON'
        font_size: '30sp'
        background_color: (1, 0, 0, 1)
        on_press: root.set_value_one(1)

    Button:
        text: 'Green \n  ON'
        font_size: '30sp'
        background_color: (0, 1, 0, 1)
        on_press: root.set_value_two(1)

    Button:
        text: 'Blue \n ON'
        font_size: '30sp'
        background_color: (0, 0, 1, 1)
        on_press: root.set_value_three(1)

    Button:
        text: 'Reset'
        background_color: (0.69, 0.77, 0.87, 1)
        on_press: root.reset_all()
        size_hint_y: .5

<ButtonBoxTwo@BoxLayout>:
    orientation: 'vertical'

    Button:
        text: '    The \n Natural'
        font_size: '30sp'
        background_color: (0, 0.50196, 0.50196, 1)
        on_press:

    Button:
        text: 'Light Blue'
        font_size: '30sp'
        background_color: (0.2, 1, 1, 1)
        on_press:

    Button:
        text: 'Dark Blue'
        font_size: '30sp'
        background_color: (0.2, 0.2, 1, 1)
        on_press:

    Button:
        text: 'Custom \n  One'
        font_size: '30sp'
        background_color: (0.1, 0.1, 0.1, 1)
        on_press:

    Button:
        text: '       Reset \n Custom One'
        background_color: (0.69, 0.77, 0.87, 1)
        on_press:
        size_hint_y: .5

<ButtonBoxThree@BoxLayout>:
    orientation: 'vertical'

    Button:
        text: 'Orange'
        font_size: '30sp'
        background_color: (1, 0.270588235, 0.3, 1)
        on_press:

    Button:
        text: 'Purple'
        font_size: '30sp'
        background_color: (0.498, 0, 1, 1)
        on_press:

    Button:
        text: 'Bordeaux'
        font_size: '30sp'
        background_color: (0.4, 0, 0.2, 1)
        on_press:

    Button:
        text: 'Custom \n  Two'
        font_size: '30sp'
        background_color: (0.1, 0.1, 0.1, 1)
        on_press:

    Button:
        text: '       Reset \n Custom Two'
        background_color: (0.69, 0.77, 0.87, 1)
        on_press:
        size_hint_y: .5