
<VLSI_Circuit_BreakerClass>:
    id: VLSI_Circuit_Breaker
    orientation: 'vertical'
    wirehead: WireHead_
    circuitbreakerbase: CircuitBreakerBase

    CircuitBreakerBaseClass:
        id: CircuitBreakerBase
        wirehead: WireHead_
        base: root
        size: root.size
        size_hint: None, None
        pos_hint: {'center_x': .5, 'center_y': .5}

    WireHead:
        id: WireHead_


<CircuitBreakerBaseClass>:
    keep_data: True
    size_hint: None, None
    size: self.game_size
    source: self.current_level_source


<WireHead>:
    size: dp(10), dp(10)
    size_hint: None, None

    canvas.after:
        Color:
            rgba: self.parent.wire_color if self.parent.wire_visible else (0, 0, 0, 0)
        Ellipse:
            size: self.size
            pos: self.pos

    canvas:
        Color:
            rgba: self.parent.wire_color if self.parent.wire_visible else (0, 0, 0, 0)
        Line:
            points: self.line_points
            width: self.width / 6
            cap: 'round'
            joint: 'bevel'
            joint_precision: 1
