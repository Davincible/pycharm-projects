#:kivy 1.9.1

<CustButton@Button>:
    font_size: 32
    color: 0, 0, 0, 1
    size: 150, 50
    background_normal: ''
    background_normal: 'button.jpeg'
    background_color: .88, .88, .88, 5
    size_hint: .4, .3

<FloatLayout>:
    CustButton:
        text: 'Top left'
        pos_hint: {'x': 0, "top": 1}

    CustButton:
        text: "Bottom left"
        pos_hint: {"left": 0, "Bottom": 0}

    CustButton:
        text: "Top right"
        pos_hint: {"right": 1, "top": 1}

    CustButton:
        text: "Bottom right"
        pos_hint: {"right": 1, "Bottom": 0}

    CustButton:
        text: "Center"
        pos_hint: {"center_x": .5, "center_y":  .5}